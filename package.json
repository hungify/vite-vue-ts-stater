{
  "name": "vue-typescript-stater",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "build-icons": "tsc -b src/scripts && node src/scripts/build-icons.js",
    "type-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "lint-staged": "lint-staged",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write src/",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.5",
    "pinia": "^2.1.7",
    "ts-pattern": "^5.0.6",
    "valibot": "^0.26.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@iconify/tools": "^4.0.0",
    "@iconify/types": "^2.0.0",
    "@iconify/utils": "^2.1.16",
    "@sxzz/eslint-config": "^3.7.6",
    "@sxzz/prettier-config": "^2.0.0",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/compiler-sfc": "^3.4.15",
    "@vue/test-utils": "^2.4.3",
    "cypress": "^13.6.3",
    "eslint": "^8.56.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^3.2.4",
    "simple-git-hooks": "^2.9.0",
    "start-server-and-test": "^2.0.3",
    "ts-reset": "^0.0.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^5.0.12",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-pages": "^0.32.0",
    "vite-plugin-vue-devtools": "^7.0.11",
    "vite-plugin-vue-layouts": "^0.11.0",
    "vitest": "^1.2.1",
    "vue-tsc": "^1.8.27"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && pnpm type-check",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": [
      "npm run lint",
      "npm run format",
      "bash -c 'npm run type-check'"
    ]
  },
  "prettier": "@sxzz/prettier-config"
}
