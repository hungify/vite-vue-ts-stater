{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "moduleDetection": "force",
    "module": "NodeNext",
    /* If transpiling with TypeScript: */
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    /* Base Options: */
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist", "shared.ts"],
}
